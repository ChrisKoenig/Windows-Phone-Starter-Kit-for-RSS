<#@ template language="C#" hostspecific="True" debug="True" #>
<#@ output extension="txt" #>
<#@ include file="T4Toolbox.tt" #>
<#@ include file="Config.ttinclude" #>
<#
    // <copyright file="MvvmT4.tt" company="CompDJ">
    //  Copyright © CompDJ. All Rights Reserved.
    // </copyright>

    // ****************************************************************
    // Creates MVVM code
    // ****************************************************************
    // ** NOTES: This works in one folder below the project, 
    // **        e.g. project\CodeTemplates\MvvmT4
    // ****************************************************************
    // ** Change Log
    // ****************************************************************
    // 2010/04/24 - Initial Creation
    // 2010/04/28 - Added language and fixed bugs
    // 2010/05/25 - Removed events, cleaned up messages for closing 
    //              and navigation. Made C# and VB.NET the same code.
    // 2010/06/18 - Fixed bug in the view code behind
    // 2010/07/09 - Added navigation command, and cleaned it up a bit
    // 2010/07/11 - Fixed C# Language templates so they actually work
    // 2011/01/27 - Added Windows Phone support, and cleaned up a lot
    // 2011/05/29 - C# generated code conforms to StyleCop.
    //              Built in support for Unity DI container for view
    //              models. (Can be changed to other DI frameworks).
    //              T4 templates also converted to C#.
    // 2011/09/17 - Fixed bug with non-di container usage.
    // 2011/10/13 - Fixed more bugs with non-di container usage.
    // 2011/10/16 - Complete refactor. Removal of bad code and 
	//              VB.NET version. Integrated Autofac IOC container.
	
	// To use this with Unity/Prism, you can use the command
	// install-package Prism.UnityExtensions
	// in the Package manager console.
	
	// To use this with Autofac, you can use the command
	// install-package Autofac
	// in the Package manager console.
	
	
    //// Wpf, Silverlight
    Config.Technology = Technology.Wpf;
    //// CSharp, VB
    Config.Language = Language.CSharp;

    //// UserControl, Page, Window, Phone
    Config.ControlMode = ControlMode.Window;

    //// Namespaces
    Config.BaseNamespace = "MVVMT4";
    Config.ViewModelNamespace = "ViewModel";
    Config.ModelNamespace = "Model";
    Config.ViewNamespace = "View";
	Config.MessagingNamespace = "Messaging";

    //// Enter your company name.
    Config.CompanyName = "CompDJ";
    //// Enter the name of the file you want to generate.
    Config.Name = "Main";

    // Setting to something other than "None" will result in using a IOC container, 
    // instead of the regular way for the view model locator.
	Config.DiContainer = DiContainer.None;

    var gen = new VmGen();
    gen.Run();

#>
