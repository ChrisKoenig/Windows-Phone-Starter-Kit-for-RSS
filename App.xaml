<?xml version="1.0" encoding="utf-8"?>
<Application x:Class="RssStarterKit.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
             xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:RssStarterKit.ViewModels"
             xmlns:config="clr-namespace:RssStarterKit.Configuration"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:ux="clr-namespace:System.Windows.Media;assembly=System.Windows"
             xmlns:converters="clr-namespace:RssStarterKit.Converters"
             xmlns:localization="clr-namespace:RssStarterKit.Localization"
             mc:Ignorable="d">
    <!--Application Resources-->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/ThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <localization:Localization x:Name="LocalizedStrings" />
            <vm:ViewModelLocator x:Key="Locator" />
            <SolidColorBrush Color="{StaticResource PhoneForegroundColor}"
                             x:Key="ThemeForgroundBrush" />
            <SolidColorBrush Color="{StaticResource PhoneBackgroundColor}"
                             x:Key="ThemeBackgroundBrush" />
            <shell:ProgressIndicator x:Name="SystemProgressIndicator"
                                     IsIndeterminate="True"
                                     IsVisible="{Binding Source={StaticResource Locator}, Path=Main.IsBusy}" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:NoDataCollectedConverter x:Key="NoDataCollectedConverter" />
            <converters:FeedTypeImagePathConverter x:Key="FeedTypeImagePathConverter" />
            <system:String x:Key="FeedTypeImagePath">/Images/FeedType/</system:String>
        </ResourceDictionary>
    </Application.Resources>
    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService Launching="Application_Launching"
                                       Closing="Application_Closing"
                                       Activated="Application_Activated"
                                       Deactivated="Application_Deactivated" />
    </Application.ApplicationLifetimeObjects>
</Application>